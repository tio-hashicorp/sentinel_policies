import "tfplan-functions" as plan

allowed_amis = ["ami-0c55b159cbfafe1f0", "ami-0c55b159cbfafe1f9"]

allEC2Instances = plan.find_resources_by_type("aws_instance")

violatingEC2Instances = plan.filter_attribute_not_contains_list(allEC2Instances, "ami", allowed_amis, true)


# Main rule
main = rule {
  length(violatingEC2Instances["messages"]) is 0
}
